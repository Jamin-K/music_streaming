<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재생목록"
            android:textSize="35dp"
            >

        </TextView>





        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            >

            <ListView
                android:id="@+id/playListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/list_card">

            </ListView>


        </ScrollView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="62.5dp"
                        android:id="@+id/title_tv_lay3"
                        android:text="제목"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="62.5dp"
                        android:id="@+id/artist_tv_lay3"
                        android:text="가수"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp">

                    </TextView>


                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:id="@+id/back_btn"
                        android:src="@drawable/rewind_btn">

                    </ImageButton>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:id="@+id/play_btn"
                        android:src="@drawable/play_btn">

                    </ImageButton>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:id="@+id/foward_btn"
                        android:src="@drawable/forward_btn">
                    </ImageButton>
                    
                </LinearLayout>



            </LinearLayout>












</LinearLayout>